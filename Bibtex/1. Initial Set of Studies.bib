@Article{Lavoie201732,
  author        = {Lavoie, Thierry and M{\'{e}}rineau, Mathieu and Merlo, Ettore and Potvin, Pascal},
  title         = {{A case study of TTCN-3 test scripts clone analysis in an industrial telecommunication setting}},

@Article{deSouza2015378,
  author   = {de Souza, {\'{E}}rica Ferreira and {de Almeida Falbo}, Ricardo and Vijaykumar, Nandamudi L},
  title    = {{Knowledge management initiatives in software testing: A mapping study}},

  title     = {{A Feature Oriented Approach to Modeling and Reusing Requirements of Software Product Lines}},
  booktitle = {Proceedings - IEEE Computer Society's International Computer Software and Applications Conference},
  year      = {2003},
  pages     = {250--256},
  address   = {Dallas, TX},

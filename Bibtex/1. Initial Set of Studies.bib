@Article{GonzalezHerrera2016398,
  author   = {Gonzalez-Herrera, I and Bourcier, J and Daubert, E and Rudametkin, W and Barais, O and Fouquet, F and J{\'{e}}z{\'{e}}quel, J M and Baudry, B},

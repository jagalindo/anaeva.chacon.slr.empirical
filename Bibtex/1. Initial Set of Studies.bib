}

@Article{Pillat201595,
  author   = {Pillat, Raquel M and Oliveira, Toacy C and Alencar, Paulo S C and Cowan, Donald D},
  title    = {{BPMNt: A {\{}BPMN{\}} extension for specifying software process tailoring}},

}

@Article{Heidenreich201069,
  author   = {Heidenreich, F and S{\'{a}}nchez, P and Santos, J and Zschaler, S and Alf{\'{e}}rez, M and Ara{\'{u}}jo, J and Fuentes, L and Kulesza, U and Moreira, A and Rashid, A},

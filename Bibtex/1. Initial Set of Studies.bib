}

@Article{Sahak20171601,
  author   = {Sahak, M and Halim, S A and Jawawi, D N A and Isa, M A},
  title    = {{Evaluation of software product line test case prioritization technique}},
  journal  = {International Journal on Advanced Science, Engineering and Information Technology},

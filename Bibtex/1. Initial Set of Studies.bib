@Article{KHAN2016963,
  author   = {Khan, Saif Ur Rehman and Lee, Sai Peck and Ahmad, Raja Wasim and Akhunzada, Adnan and Chang, Victor},
  title    = {{A survey on Test Suite Reduction frameworks and tools}},

@Article{Berger20141520,
  author   = {Berger, T and Pfeiffer, R.-H. and Tartler, R and Dienst, S and Czarnecki, K and WaÌ§sowski, A and She, S},
  title    = {{Variability mechanisms in software ecosystems}},

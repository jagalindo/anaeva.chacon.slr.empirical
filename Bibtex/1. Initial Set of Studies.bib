}

@Article{HEUER20132414,
  author   = {Heuer, Andr{\'{e}} and Stricker, Vanessa and Budnik, Christof J and Konrad, Sascha and Lauenroth, Kim and Pohl, Klaus},
  title    = {{Defining variability in activity diagrams and Petri nets}},

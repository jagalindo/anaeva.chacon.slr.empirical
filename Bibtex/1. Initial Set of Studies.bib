@Article{Mizouni20147549,
  author   = {Mizouni, Rabeb and Matar, Mohammad Abu and Mahmoud, Zaid Al and Alzahmi, Salwa and Salah, Aziz},
  title    = {{A framework for context-aware self-adaptive mobile applications {\{}SPL{\}}}},

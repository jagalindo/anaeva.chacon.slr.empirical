  url      = {https://www.scopus.com/inward/record.uri?eid=2-s2.0-85030149220{\&}doi=10.1007{\%}2F978-3-319-66845-1{\_}8{\&}partnerID=40{\&}md5=bda134f0880a96dacc8f65a515a60891},
}

@Article{Galster201516,

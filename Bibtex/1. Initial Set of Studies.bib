@Article{DAVILA20131548,
  author   = {D{\'{a}}vila, Oscar and Perez, Roberto and Gardu{\~{n}}o, Fernando and Ram{\'{i}}rez-Cadena, Miguel and Molina, Arturo},
  title    = {{Developing a Universal Numeric Control Based-on Linux Real-Time Software}},

  author   = {KofroÅ, J and Pl{\'{a}}{\v{s}}il, F and {\v{S}}er{\'{y}}, O},
  title    = {{Modes in component behavior specification via EBP and their application in product lines}},
  journal  = {Information and Software Technology},
  year     = {2009},

@Article{Cunha2016234,
  author   = {Cunha, J{\'{a}}come and Fernandes, Jo{\~{a}}o Paulo and Martins, Pedro and Mendes, Jorge and Pereira, Rui and Saraiva, Jo{\~{a}}o},
